<div class="navbar-wagon">
  <div class="nav-left">
     <%= image_tag 'Frame.png', class: "logo-image" %>


      <!-- Logo -->
      <%= link_to root_path, class: "navbar_logo logo_font" do %>
        Buidl
      <% end %>
  </div>

  <div class="nav-center">
   <div id="homepage_search_nav">
    <%= simple_form_for @profile, defaults: { label: false }, :html=> { id: "nav-search" } do |f| %>

    <%= f.input_field :github_username, placeholder: "Search a GitHub username", autofocus: true %>

      <%= button_tag class: "btn-nav" do %>
        <i class="fa">Search</i>

      <% end %>
    <% end %>

   </div>
  </div>

  <!-- Right Navigation -->

  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- Links when logged in -->

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

        <!-- Jethro code --->
        <%# if @profile %>
          <%#= cl_image_tag @profile.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <%# else %>
          <%#= image_tag('logo.png', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown") %>
        <%# end %>
        <!-- Jethro code END --->



          <% if current_user.profile.photo.present? %>
          <%= cl_image_tag current_user.profile.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag current_user.profile_photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to profile_path(current_user.profile) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>


      </div>
    </div>
    <% else %>

    <!-- Sign in with Github -->
    <%= link_to "Claim your profile", user_github_omniauth_authorize_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <!--Sign in with github end -->
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">


    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li>
            <%= link_to profile_path(current_user.profile) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li><%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
          </li>
        <% else %>
          <li><%= link_to "Sign in with Github", user_github_omniauth_authorize_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li><%= link_to t(".sign_in", default: "Sign in"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

